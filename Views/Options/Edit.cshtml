@model GreyMatterSocialNet.Models.Option

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Option</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Name)

        @Html.HiddenFor(model => model.DisplayText)

        @Html.HiddenFor(model => model.SituationId)

        @Html.HiddenFor(model => model.Cost)

        @Html.HiddenFor(model => model.MentalEffect)

        @Html.HiddenFor(model => model.PhysicalEffect)

        @Html.HiddenFor(model => model.CreatorId)

        <div class="form-group">
            @Html.LabelFor(model => model.PictureAddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PictureAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PictureAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.CreatedOnUtc)

        @Html.HiddenFor(model => model.UpdatedOnUtc)

        @Html.HiddenFor(model => model.UpVotes)

        @Html.HiddenFor(model => model.DownVotes)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
